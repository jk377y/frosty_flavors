---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
export interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/images/icons/favicon.png" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<Header />
		<slot />
		<Footer />
	</body>
</html>

<style is:global>
	@import url("https://fonts.googleapis.com/css2?family=Rubik+Dirt&display=swap");
	@import url("https://fonts.googleapis.com/css2?family=Julius+Sans+One&family=Rubik:ital@0;1&display=swap");
	*,
	*::before,
	*::after {
		text-decoration: none;
		list-style: none;
		box-sizing: border-box;
		padding: 0;
		margin: 0;
	}
	:root {
		--clr01: #ffaaaa;
		--clr02: #ffc457;
		--clr03: #f4ffb3;
		--clr04: #a1ffa9;
		--clr05: #7dd6ff;
		--clr06: #cf95ff;
		--window: rgba(0, 0, 0, 0.5);
		--window2: rgba(0, 0, 0, 0.85);
		--shadow: 0 0 10px 5px var(--window2);
		--animate: 0.2s ease-in-out;
	}
	html {
		height: 100%;
		scrollbar-width: thin;
		scrollbar-color: #888 #f1f1f1;
	}
	body {
		background-image: url("/images/UI_images/background.png");
		background-size: cover;
		background-position: center;
		background-attachment: fixed;
		background-repeat: no-repeat;
		min-height: 100%;
		display: flex;
		flex-direction: column;
	}
	::-webkit-scrollbar {
		width: 10px;
	}
	::-webkit-scrollbar-track {
		background-color: #f1f1f1; /* or any desired color */
	}
	::-webkit-scrollbar-thumb {
		background-color: #888; /* or any desired color */
	}
	.body-text {
		font-family: "Julius Sans One", sans-serif;
		font-weight: 600;
	}
	.heading-text {
		font-family: "Rubik", sans-serif;
		/* font-style: italic; */
	}
	.title {
		font-size: 2.25rem;
	}
	@media only screen and (min-width: 425px) {
		.title {
			font-size: 2.5rem;
		}
	}
	@media only screen and (min-width: 500px) {
		.title {
			font-size: 3rem;
		}
	}
	@media only screen and (min-width: 769px) {
		.title {
			font-size: 3.5rem;
		}
	}
	@media only screen and (min-width: 1024px) {
		.title {
			font-size: 4rem;
		}
	}
	@media only screen and (min-width: 1200px) {
		.title {
			font-size: 5rem;
		}
	}
</style>
