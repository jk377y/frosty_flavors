---
import MobileHamburgerNav from './MobileHamburgerNav/MobileHamburgerNav.jsx'
---

<header>
    <a href="/">
        <div class="logo-parent">
            <img src="/images/snowcones.avif" class="logo"/>
        </div>
    </a>

	<label class="title">Frosty Flavors</label>
    
    <nav class="navbar">
        <ul>
            <li><a href="/"><img class="nav-icons" src="/images/icons/home.png"></a></li>
            <li><a href="/menu"><img class="nav-icons" src="/images/icons/menu.png"></a></li>
            <li><a href="/cart"><img class="nav-icons" src="/images/icons/cart.png"></a></li>
            <li><a href="/contact"><img class="nav-icons" src="/images/icons/phone.png"></a></li>
        </ul>
    </nav>
    <MobileHamburgerNav client:load />
</header>

<script></script>

<style>
    header {
        background-color: var(--window);
        padding: 1rem;
        height: 150px;
        /* width: 100%; */
        display: flex;
        justify-content: space-between;
        align-items: center;
    }
    .logo-parent {
        position: relative;
        overflow: hidden;
        cursor: pointer;
        border-radius: 50%;
        height: 125px;
        width: 125px;
        transition: var(--animate);
    }
	.logo {
        width: 100%;
        height: 100%;
        transition: var(--animate);
	}
    .logo-parent:hover {
        box-shadow: var(--shadow);
    }
    .logo-parent:hover .logo {
        transform: scale(1.2);
    }
    nav ul {
        display: flex;
    }
    .nav-icons {
        height: 35px;
        width: 35px;
        transition: var(--animate);
        margin: 0 1rem;
    }
    .nav-icons:hover {
        transform: scale(1.2);
    }
    .title {
        text-align: center;
        font-size: 4rem;
        font-weight: 700;
        font-style: italic;
        color: var(--clr02);
    }

    /* Mobile */
    @media only screen and (max-width: 1024px) {
        .title {
            font-size: 3rem;
            margin: 0 auto;
        }
    }
    @media only screen and (max-width: 768px) {
        .navbar {
            display: none;        
        }
        .title {
            font-size: 2.5rem;
            margin: 0 auto;
        }
    }
    @media only screen and (max-width: 425px) {
        .title {
            font-size: 2rem;
            margin: 0 auto;
        }
    }
    /* @media only screen and (min-width: 769px) {
        .mobileNav {
            display: none;
        }
        
    } */
    
</style>
